<%= form_tag('/employees/create') do %>
	
	<p>Name: <%= text_field_tag :name %></p>
	<p>Age : <%= number_field_tag 'age' %></p>
	<p>Email: <%= email_field_tag 'email' %></p>
	<p> Address: <%= text_area_tag 'address' %></p>
	<p>
		Gender: <%= radio_button_tag 'gender', 'male' %> Male <%= radio_button_tag 'gender', 'female' %> Female
	</p>
	<p><%= submit_tag %></p>
<% end %>
